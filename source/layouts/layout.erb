<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= "#{("#{current_page.data.title} - " if current_page.data.title)} Zachary Baruch" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= javascript_include_tag "bootstrap.bundle.min.js" %>
  </head>
  <body>
    <%= partial 'layouts/header' %>
    <div class="container">
      <h1 class="page-header"><%= current_page.data.header || "Zachary Baruch's Personal Webpage" %></h1>
      <%= yield %>
    </div>
  </body>
</html>
